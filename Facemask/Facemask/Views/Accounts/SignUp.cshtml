@model Facemask.ViewModels.SignupViewModel
@{
    ViewData["Title"] = "Facemask - SignUp";
    Layout = "_ShopLayout";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form method="post" asp-controller="Accounts" asp-action="SignUp">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter your fullname" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Phone"></label>
                    <input asp-for="Phone" class="form-control" placeholder="Enter your phone number" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BillingAddress"></label>
                    <input asp-for="BillingAddress" class="form-control" placeholder="Enter your billing address" />
                    <span asp-validation-for="BillingAddress" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DefaultShippingAddress"></label>
                    <input asp-for="DefaultShippingAddress" class="form-control" placeholder="Enter your default shipping address" />
                    <span asp-validation-for="DefaultShippingAddress" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="col-md-2 custom-control-label">Select Country</label>
                    <div class="col-md-10">
                        @Html.DropDownList("CountryList", new SelectList(ViewBag.CountryList), new { @class = "form-control"})
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Signup</button>
            </form>
        </div>
    </div>
</div>
